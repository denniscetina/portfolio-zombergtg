---
interface Props {
    heading: string;
    description: string;
    icon: any;
}

const { heading, description, icon: Icon } = Astro.props;
---
<div class="flex flex-col items-start gap-3 flex-1 min-w-[200px] border-1 border-[#21262e] rounded-xl">
    <div class="card-offer flex flex-col p-4 gap-1 h-full">
        <Icon />
        <h3>{heading}</h3>
        <p class="text-neutral-400">
            {description}
        </p>
    </div>
</div>